<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ggori.main.mapper.IMainMapper">

	<resultMap type="Board" id="noticeMap">
		<result column="board_no" property="boardNo"/>
		<result column="board_type" property="boardType"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="reg_date" property="regDate"/>
		<result column="file_path" property="filePath"/>
		<result column="hits" property="hits"/>
		<result column="recommends" property="recommends"/>
		<result column="member_id" property="memberId"/>
	</resultMap>
	
	<select id="recentBoard" parameterType="string" resultMap="noticeMap">
		select Board.Board_No, Board.Title, Board.Member_Id
		  from (select *
		  		  from board_form
		  		 order by no desc) Board
		 where board_type = #{boardType}
		   and rownum &lt; 9
	</select>
	
	<select id="cafeInfo" resultType="string">
		select member_id
		  from member
		 where rank='운영자'
	</select>
	
	<select id="myMiniInfo" resultType="">
		select Nick_Name, Reg_Date, count(*)
		  from member
		 where member_id = #{memberId}
	</select>

</mapper>