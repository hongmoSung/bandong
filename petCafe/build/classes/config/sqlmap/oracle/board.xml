<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ggori.repository.mapper.IBoardMapper">

	<resultMap type="Board" id="boardMap">
		<result column="board_no" property="boardNo"/>
		<result column="board_type" property="boardType"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="reg_date" property="regDate"/>
		<result column="hits" property="hits"/>
		<result column="recommends" property="recommends"/>
		<result column="member_id" property="memberId"/>
		<result column="nick_name" property="nickName"/>
		<result column="file_id" property="fileId"/>
	</resultMap>
    
    <select id="selectAll" parameterType="string" resultMap="boardMap">
    	select *
    	  from board_form
    	 where board_type = #{boardType}
    	 order by board_No desc
    </select>
    
    <select id="selectOneBoard" parameterType="int" resultMap="boardMap">
    	select *
    	  from board_form
    	 where board_No = #{boardNo}
    </select>
    
    <insert id="insertBoard" parameterType="Board">
    	insert into board_form(
    		board_No, title, content, board_Type, member_Id
    	) values (
    		s_board_no.nextval, #{title}, #{content}, #{boardType}, #{memberId}
    	)
    </insert>
    
    <update id="updateBoard" parameterType="Board">
    	update board_form
    	   set title = #{title},
    	   	   content = #{content}
    	 where board_No = #{boardNo}
    </update>
    
    <delete id="deleteBoard" parameterType="int">
    	delete
    	  from board_form
    	 where board_No = #{boardNo}
    </delete>
    
    <select id="myNickName" parameterType="string" resultType="string">
		select nick_name
		  from member
		 where member_id = #{memberId}
	</select>
	
   	<resultMap type="File" id="fileMap">
		<result column="File_Id" property="fileId"/>
		<result column="File_Path" property="filePath"/>
		<result column="Origin_Name" property="originName"/>
		<result column="System_name" property="systemName"/>
		<result column="File_Size" property="FileSize"/>
		<result column="member_id" property="memberId"/>
		<result column="board_no" property="boardNo"/>
	</resultMap>
	
	<insert id="insertFile" parameterType="File">
	   	<selectKey resultType="integer" keyProperty="no" order="BEFORE">
	   		select s_board_board_No.currval from dual
	   	</selectKey>
	    insert into file_form(           
		    File_Id, file_path, origin_name, system_name, file_size, board_no, member_id
		) values (                       
		    s_board_file_id.nextval, #{filePath}, #{originName}, #{systemName}, #{fileSize} , #{boardNo}, #{memberID}
		)                               
	</insert>
	
	<select id="selectFile" parameterType="integer" resultMap="fileMap">
		select *
		  from file_form
		 where board_no=#{boardNo} 
	</select>
	
	<delete id="deleteFile" parameterType="int">
	    delete
	      from file_form
	     where board_no=#{boardNo} 
	</delete>
	
</mapper>