<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ggori.repository.mapper.ICareTypeMapper">

	<resultMap id="careMap" type="Care">
		<result column="hospital_id" property="hospitalId"/>
		<result column="type_name" property="typeName"/>
	</resultMap>
	
	<select id="SearchCare" parameterType="int" resultType="string">
		select type_name
		  from care_type
		 where hospital_id = #{hospital_id}
	</select>
	
	<insert id="insertCare" parameterType="Care">
		insert into care_type (
			type_name, hospital_id
		) values (
			#{typeName}, #{hospitalId}
		)
	</insert>

</mapper>